<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.TeacherDashboardController"
      alignment="CENTER" spacing="18" style="-fx-background-color: #232526; -fx-background-radius: 18; -fx-padding: 28;">
    <Label text="Submit Marks" style="-fx-font-size: 24px; -fx-text-fill: #00c6ff; -fx-font-family: 'Poppins Semibold';"/>
    <GridPane hgap="16" vgap="14" style="-fx-font-size: 16px; -fx-font-family: 'Segoe UI';">
        <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #fff;"/>
        <TextField fx:id="studentIdField" promptText="Enter Student ID" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #00c6ff; -fx-background-color: #181c24; -fx-text-fill: #fff; -fx-prompt-text-fill: #00c6ff; -fx-border-width: 2;"/>
        <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #fff;"/>
        <ComboBox fx:id="subjectComboBox" promptText="Select Subject" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #00c6ff; -fx-background-color: #181c24; -fx-text-fill: #fff; -fx-prompt-text-fill: #00c6ff; -fx-border-width: 2;"/>
        <Label text="Marks:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #fff;"/>
        <TextField fx:id="marksField" promptText="Enter Marks" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #00c6ff; -fx-background-color: #181c24; -fx-text-fill: #fff; -fx-prompt-text-fill: #00c6ff; -fx-border-width: 2;"/>
    </GridPane>
    <Button fx:id="submitButton" text="Submit" onAction="#submitMarks" prefWidth="180" style="-fx-background-color: linear-gradient(to right, #00c6ff, #232526); -fx-text-fill: white; -fx-background-radius: 14; -fx-font-size: 17px; -fx-font-family: 'Poppins Medium'; -fx-cursor: hand;"/>
    <Label fx:id="alertLabel" text="" visible="false" style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #ff5252; -fx-background-color: #232526; -fx-padding: 6 0; -fx-background-radius: 8;"/>
</VBox> 